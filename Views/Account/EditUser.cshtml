@model CarZone.Models.ViewModels.EditUserVM

<form asp-controller="Account" asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <div class="form-group">
        <label asp-for="UserName">Nome de usuário</label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Role">Função</label>
        <select asp-for="Role" asp-items="@Model.AvailableRoles" class="form-control"></select>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>