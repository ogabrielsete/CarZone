@model CarZone.Models.ViewModels.ResetPasswordVM;

@{
    ViewData["Title"] = "Redefinição de Senha";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="d-flex justify-content-center" style="text-align:center;">
    <div class="form-box" style="background-color: white; padding: 100px; box-shadow: 0px 0px 10px rgba(0,0,0,0.1);">
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            
            <p style="font-family:Roboto; font-size:20px;">Redefinir Senha</p>

            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <input type="password" asp-for="Password" class="form-control" placeholder="Nova senha"/> <br />
            <input type="password" asp-for="Password" class="form-control" placeholder="Confirmar nova senha" />
            <br />
            <button class="col-12 align-self-auto btn btn-danger" type="submit">Alterar senha</button>
            <br />
            @ViewBag.Msg
        </form>
    </div>
</div>
