@model Usuario
@{
    ViewData["Title"] = "Excluir Usuário";
}


<div class="text-center">

    <p class="display-6"> Deseja excluir o usuario @Model.Nome?</p>
    <br />
    <a type="button" class="btn btn-outline-danger" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Excluir</a>
    <a type="button" class="btn btn-outline-secondary" asp-controller="Usuario" asp-action="Index">Cancelar</a>
</div>
