@model Venda
@{
    ViewData["Title"] = "Cadastrar Venda";
}

<div class="text-center">

    <p class="display-6">Cadastrar Venda</p>
    <br />
</div>

<form class="row mb-3" asp-controller="Vendas" asp-action="Criar" method="post">

    <div class="d-none">
        <label for="id"></label>
       <input type="number" asp-for="Id"/>
    </div>

    <div class="row mb-3">
        <label for="data" class="col-sm-2 col-form-label">Data da Venda</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="DataVenda">
        </div>
    </div>

    <div class="row mb-3">
        <label for="pagamento"> Pagamento </label>
        <select name="PagamentoId" asp-for="PagamentoId" class="form-control" asp-items="@ViewBag.Pag"></select>
    </div>


    <div class="row mb-3">
        <label for="modelo"> Modelo </label>
        <select name="ModeloId" asp-for="ModeloId" class="form-control" asp-items="@ViewBag.Modelos"></select>
    </div>


    <div class="row mb-3">
        <label for="cliente"> Cliente </label>
        <select name="ClienteId" asp-for="ClienteId" class="form-control" asp-items="@ViewBag.Clientes"></select>
    </div>
    
    <div>
    <button type="submit" class="btn btn-primary">Adicionar Venda</button>
    <a class="btn btn-primary" asp-controller="Vendas" asp-action="Index">Voltar</a>
    </div>

</form>

