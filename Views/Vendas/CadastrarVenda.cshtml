@{
    ViewData["Title"] = "Cadastrar Venda";
}

<div class="text-center">

    <p class="display-6">Cadastrar Venda</p>
    <br />
</div>

<form class="row mb-3" asp-controller="Vendas" asp-action="CadastrarVenda" method="post">

    <div class="d-none">
        <label for="id"></label>
        @* aqui vai o id       <input type="number" asp-for= />*@
    </div>

    <div class="row mb-3">
        <label for="data" class="col-sm-2 col-form-label">Data da Venda</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="data">
        </div>
    </div>

    <div class="row mb-3">
        <label for="financiamento" class="col-sm-2 col-form-label">Pagamento</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="financiamento">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Veiculo" class="col-sm-2 col-form-label">Veiculo</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Veiculo">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Cliente" class="col-sm-2 col-form-label">Cliente</label>
        <div class="col-sm-10">
            <input type="any" class="form-control" id="Cliente">
        </div>
    </div>

    @*aqui vai o drop down de status*@
    <div class="row mb-3">
        <label for="statusVenda" class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
            <input type="" class="form-control" id="statusVeiculo">
        </div>
    </div>



</form>
<button type="submit" class="btn btn-primary">Adicionar Venda</button>
<a class="btn btn-primary" asp-controller="Vendas" asp-action="Index">Voltar</a>
