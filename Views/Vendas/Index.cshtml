@using CarZone.Models.ViewModels;
@model List<VendasVM>
@{
    ViewData["Title"] = "Lista de Vendas";
}



<div class="text-center">
    <p class="display-6">Lista de Vendas</p>
    <br />
    <a class="btn btn-outline-danger btn-sm" asp-controller="Vendas" asp-action="Criar">Cadastrar Venda</a>
    <br />
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div class="text-center">
        <table class="table-centered" id="paginacao">
            <thead>
                <tr>
                    <th class="d-none">Id</th>
                    <th scope="col"class="text-center">Data da Venda</th>
                    <th scope="col" class="text-center">Marca</th>
                    <th scope="col"class="text-center">Veiculo</th>
                    <th scope="col"class="text-center">Cliente</th>
                    <th scope="col"class="text-center">Pagamento</th>
                    <th scope="col"class="text-center">Qtd Meses</th>
                    <th scope="col"class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null && Model.Any())
                {
                    foreach (VendasVM sell in Model)
                    {
                        <tr>
                            <th class="d-none">@sell.Id</th>
                            <td>
                                <span>@sell.DataVenda.ToString("dd/MM/yyyy")</span>
                            </td>
                            <td>@sell.Marca</td>
                            <td>@sell.Modelo</td>
                            <td>@sell.Cliente</td>
                            <td>@sell.Pagamento</td>
                            <td>@sell.Meses</td>
                            <td>
                                <a type="button" class="btn btn-outline-dark" asp-controller="Vendas" asp-route-id="@sell.Id" asp-action="Editar">Editar</a>
                                <a type="button" class="btn btn-outline-dark" asp-controller="Vendas" asp-route-id="@sell.Id" asp-action="ApagarConfirmacao">Apagar</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>