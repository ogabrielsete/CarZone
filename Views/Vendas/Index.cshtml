@model List<Venda>
@{
    ViewData["Title"] = "Lista de Vendas";
}

<div class="text-center">
    <p class="display-6">Lista de Vendas</p>
    <br />
    <a class="btn btn-outline-danger btn-sm" asp-controller="Vendas" asp-action="CadastrarVenda">Cadastrar Venda</a>
    <br />
    <br />
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Data da Venda</th>
                <th scope="col">Pagamento</th>
                <th scope="col">VeiculoId</th>
                <th scope="col">ClienteId</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @if (Model != null && Model.Any())
                {
                    foreach (Venda sell in Model)
                    {
                        <th scope="row">@sell.Id</th>
                        <td>@sell.DataVenda</td>
                        <td>@sell.PagamentoId</td>
                        <td>@sell.VeiculoId</td>
                        <td>@sell.Cliente</td>
                        <td>@sell.Status</td>
                        <td>
                            <a type="button" class="btn btn-outline-dark" asp-controller="Vendas" asp-action="EditarVenda">Editar</a>
                            <a type="button" class="btn btn-outline-dark" asp-controller="Vendas" asp-action="ApagarConfirmacao">Apagar</a>
                        </td>
                    }
                }
            </tr>
        </tbody>
    </table>
</div>