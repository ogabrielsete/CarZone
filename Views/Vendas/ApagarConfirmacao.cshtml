@model Venda
@{
    ViewData["Title"] = "Excluir Venda";
}

<div class="text-center">

    <p class="display-5"> Deseja excluir a venda do modelo @Model.Modelo para o cliente @Model.Cliente?</p>
    <br />
    <a type="button" class="btn btn-outline-danger" asp-controller="Vendas" asp-action="Apagar" asp-route-id="@Model.Id">Excluir</a>
    <a type="button" class="btn btn-outline-secondary" asp-controller="Vendas" asp-action="Index">Cancelar</a>
</div>