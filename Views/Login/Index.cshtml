@model Login
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="d-flex justify-content-center">
    <form class="col-3" asp-controller="Login" asp-action="Entrar" method="post">
        <br/>
        <img class="centerd" src="/images/logoresized.png" alt="">

        <div class="form-group">
            <label for="loginId" class="form-label">Login</label>
            <input type="text" class="form-control" id="login" asp-for="AcessoLogin">
            @Html.ValidationMessageFor(x => x.AcessoLogin)
        </div>
        <div class="form-group">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" class="form-control" id="senha" asp-for="Senha">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
        <p class="col-8 align-self-auto"><a asp-controller="Login" asp-action="RedefinirSenha">Esqueci minha senha! </a></p>
        <button type="submit" class="btn btn-primary">Entrar</button>

    </form>
</div>

