@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
     <div class="container-fluid">
                <div class="logo-container align-items-center">
                    <a class="logotipo" href="@* @Url.Action("Index", "Home") *@">C</a>

                </div>
                <p class="carzonelogo">CarZone</p>
        <a class="navbar-usuario" asp-area="" asp-controller="Home" asp-action="Index">Olá, @User.Identity.Name</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-center">
                    <ul class="navbar-nav flex-center sair-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Veiculos" asp-action="Index">Disponíveis</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vendas" asp-action="Index">Vendas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ModeloVeiculos" asp-action="Index">Modelos</a>
                        </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Marcas" asp-action="Index">Marcas</a>
                    </li>
                }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pagamentos" asp-action="Index">Pagamentos</a>
                        </li>



                    </ul>
                </div>
                </div>

    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post" class="navbar-nav flex-center sair">
        <ul class="nav navbar-nav navbar-left">
            <button type="submit" style="width:auto; height:auto;" class="nav-link btn btn-link">
                 Sair
            </button>
        </ul>
        </form>
}
else{
    <ul class="navbar-nav navbar-left">
        <a class="nav-link text-light" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)">&nbsp; Log in&nbsp; </a>
        <a class="nav-link text-light" asp-controller="Account" asp-action="Register">&nbsp;Registro&nbsp;&nbsp;&nbsp; </a>
    </ul>
}