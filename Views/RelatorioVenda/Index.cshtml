@{
    ViewData["Title"] = "Relatório de Vendas";
}

<div class="container">
    <form asp-action="RelatorioVendaSimples">
        <fieldset>
            <legend class="text-center"><b>Relatório de Vendas</b></legend>

            <div class="form-group" style="margin-left: 325px;">
                <br />
                <label for="minDate" class="col-md-4 control-label">Data Inicial</label>
                <div class="col-md-4">
                    <input type="date" name="minDate" class="form-control" />
                </div>
            </div>

            <div class="form-group" style="margin-left: 325px;">
                <label for="maxDate" class="col-md-4 control-label">Data Final</label>
                <div class="col-md-4">
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>

            <div class="form-group" style="margin-left: 370px;">
                <div class="col-md-12">
                    <br />
                    <button type="submit" class="btn btn-success">Enviar</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
