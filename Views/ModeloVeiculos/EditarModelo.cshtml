@{
    ViewData["Title"] = "Editar Modelo";
}

<div class="text-center">

    <p class="display-6">Editar Modelo</p>
    <br />


    <form asp-controller="ModeloVeiculos" asp-action="EditarModelo" method="post">


        <div class="d-none">
            <label for="id"></label>
            @* aqui vai o id       <input type="number" asp-for= />*@
        </div>

        <div class="d-flex flex-column align-items-center">
            <div class="text-center">
                <p for="nomeModelo">Nome do Modelo</p>
                <input type="text" class="form-control">
            </div>
        </div>


    </form>
    <br />
    <button type="submit" class="btn btn-primary">Editar Modelo</button>
    <a class="btn btn-primary" asp-controller="ModeloVeiculos" asp-action="Index">Voltar</a>

</div>