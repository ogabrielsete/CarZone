@model Cliente
@{
    ViewData["Title"] = "Excluir Cliente";
}


<div class="text-center">

    <p class="display-6"> Deseja excluir o cliente @Model.Nome portador do CPF (@Model.CPF)?</p>
    <br />
    <a type="button" class="btn btn-outline-danger" asp-controller="Clientes" asp-action="Apagar" asp-route-id="@Model.Id">Excluir</a>
    <a type="button" class="btn btn-outline-secondary" asp-controller="Clientes" asp-action="Index">Cancelar</a>
</div>
