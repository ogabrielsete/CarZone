        // Formata o CPF com pontos e hífens
        function formatarCPF(cpf) {
            const cpfFormatado = cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
            return cpfFormatado;
        }

