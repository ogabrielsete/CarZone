@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="text-center">

    <p class="display-6">Cadastrar Cliente</p>
    <br />
</div>

<form class="row mb-3" asp-controller="Clientes" asp-action="CadastrarCliente" method="post">

    <div class="d-none">
        <label for="id"></label>
        @* aqui vai o id       <input type="number" asp-for= />*@
    </div>

   
    <div class="row mb-3">
        <label for="nome" class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="nome">
        </div>
    </div>

    <div class="row mb-3">
        <label for="cpfCliente" class="col-sm-2 col-form-label">CPF</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="cpfCliente">
        </div>
    </div>

    <div class="row mb-3">
        <label for="telefoneCliente" class="col-sm-2 col-form-label">Telefone</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="telefoneCliente">
        </div>
    </div>

    <div class="row mb-3">
        <label for="enderecoCliente" class="col-sm-2 col-form-label">Endereço</label>
        <div class="col-sm-10">
            <input type="any" class="form-control" id="enderecoCliente">
        </div>
    </div>



</form>
<button type="submit" class="btn btn-primary">Cadastrar Cliente</button>
<a class="btn btn-primary" asp-controller="Clientes" asp-action="Index">Voltar</a>
