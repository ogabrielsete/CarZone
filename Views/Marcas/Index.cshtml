@model List<Marca>
@{
    ViewData["Title"] = "Lista de Marcas";
}

<div class="text-center">
    <p class="display-6">Lista de Marcas</p>
    <br />
    <a class="btn btn-outline-danger btn-sm" asp-controller="Marcas" asp-action="Criar">Adicionar Marca</a>
    <br />
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemErro"]
        </div>
    }


    <div class="text-center">
        <table class="table" id="paginacao">
            <thead>
                <tr>
                    <th class="d-none">Id</th>
                    <th scope="col" class="text-center">Marca</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null && Model.Any())
                {
                    foreach (Marca marcas in Model)
                    {
                        <tr>
                            <th class="d-none">@marcas.Id</th>
                            <td>@marcas.Nome</td>
                            <td>
                                <a type="button" class="btn btn-outline" asp-controller="Marcas" asp-route-id="@marcas.Id" asp-action="EditarMarca"><i class="bi bi-pencil"></i></a>
                                <a type="button" class="btn btn-outline-dark" asp-controller="Marcas" asp-route-id="@marcas.Id" asp-action="ApagarConfirmacao"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>