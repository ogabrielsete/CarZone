@model Marca
@{
    ViewData["Title"] = "Excluir Marca";
}

<div class="text-center">

    <p class="display-5"> Deseja excluir a marca @Model.Nome?</p>
    <br />
    <a type="button" class="btn btn-outline-danger" asp-controller="Marcas" asp-action="Apagar" asp-route-id="@Model.Id">Excluir</a>
    <a type="button" class="btn btn-outline-secondary" asp-controller="Marcas" asp-action="Index">Cancelar</a>
</div>