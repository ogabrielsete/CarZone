@model Marca
@{
    ViewData["Title"] = "Adicionar Marca";
}

<div class="text-center">

    <p class="display-6">Adicionar Marca</p>
    <br />


    <form asp-controller="Marcas" asp-action="Criar" method="post">


        <div class="d-none">
            <label for="id"></label>
            <input type="number" asp-for="Id" />
        </div>

        <div class="d-flex flex-column align-items-center">
            <div class="text-center">
                <h3 for="nomeMarca">Nome da Marca</h3>
                <input type="text" class="form-control" asp-for="Nome">
            </div>
        </div>

      
        <br />

        <div>
            <button type="submit" class="btn btn-primary">Adicionar Marca</button>
            <a class="btn btn-primary" asp-controller="Marcas" asp-action="Index">Voltar</a>
        </div>

       

    </form>



</div>